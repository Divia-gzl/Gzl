<script>
function copyCode(){
  const html = document.documentElement.outerHTML;
  navigator.clipboard.writeText(html).then(()=>{
    document.getElementById('status').innerText = 'HTML copied to clipboard ✅';
  }).catch(()=> {
    document.getElementById('status').innerText = 'Copy failed — open file and save manually';
  });
}
</script>
